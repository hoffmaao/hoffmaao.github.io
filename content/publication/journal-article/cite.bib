author = {Hills, B. H. and Holschuh, N. and Hoffman, A. O. and Horlings, A. N. and Erwin, E. and Kirkpatrick, L. R. and Fudge, T. J. and Steig, E. J. and Christianson, K.},
title = {Radar-Derived Crystal Orientation Fabric Suggests Dynamic Stability at the Summit of Hercules Dome},
